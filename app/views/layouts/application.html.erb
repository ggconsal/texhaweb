<!DOCTYPE html>
<html>
<head>

  <title><%= yield(:title) %> txaWeb DEMO, Texha Argentina, Soluciones Simples a Problemas Complejos</title>
  <meta name="keywords" content="Aumentar Rentabilidad, Aumentar las Ventas, Reducir los Costos, Tienda on-line, Tienda online, Tienda Virtual,ecommerce,Tienda prearmada,Tienda pre-armada,Tienda pre-fabricada,Tienda prefabricada,Experiencia Comercial,Seriedad,Tecnologia,internet,seo">
  <meta name="description" content="Nuestra Pasión: Incrementar sus ganancias, Facilitando la Tecnologia (aumentando sus ventas y reduciendo sus costos).">
  <meta name="distribution" content="global"/>
  <meta name="Robots" content="all"/>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <!--[if IE]>
    <link rel="stylesheet" type="text/css" href="assets/ms-compatibility.css.erb">
  <![endif]-->

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <!--[if IE]>
    <script type="text/javascript" src="assets/respond.js"></script>
  <![endif]-->

  <%= csrf_meta_tags %>

  <link rel="shortcut icon" href= <%= asset_path("favicon.ico") %> />
</head>
<body>

<div id="product-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
</div>

<% @menu_home = "" %>
<% @menu_servicios = "" %>
<% @menu_quien = "" %>
<% @menu_ubicacion = "" %>
<% @menu_otramas = "" %>
<% @page_lati = -34.603695 %>
<% @page_long = -58.381705 %>

<% paginas.each do |page| %>

  <% if page.pag_nombre == "home" %>
    <% @menu_home = page.pag_titulo %>
  <% end %>

  <% if page.pag_nombre == "pagina1" %>
    <% @menu_otramas = page.pag_titulo %>
  <% end %>

  <% if page.pag_nombre == "pricing" %>
    <% @menu_otramas = page.pag_titulo %>
  <% end %>

  <% if page.pag_nombre == "quien" %>
    <% @menu_quien = page.pag_titulo %>
  <% end %>

  <% if page.pag_nombre == "servicios" %>
    <% @menu_servicios = page.pag_titulo %>
  <% end %>

  <% if page.pag_nombre == "ubicacion" %>
    <% @menu_ubicacion = page.pag_titulo %>
  <% end %>

  <% if page.pag_nombre == "pie" || page.pag_nombre == "pie-demo" %>
    <% @page_pie = page %>
    <% @page_lati = @page_pie.pag_lati %>
    <% @page_long = @page_pie.pag_long %>
  <% end %>
<% end %>

<script type="text/javascript">
  function loadScript() {
    var script = document.createElement('script');
    script.type = 'text/javascript';
    script.src = 'https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&' +
        'callback=initialize';
    document.body.appendChild(script);
  }

  function initialize() {

    var latitud = <%= @page_lati %>;
    var longitud = <%= @page_long %>;
    var direc = new google.maps.LatLng(latitud, longitud);

    var mapOptions = {
      zoom: 14,
      center: direc
    };
    var map = new google.maps.Map(document.getElementById('texha_map'),  mapOptions);

    var marker = new google.maps.Marker({
      position: direc,
      map: map,
      animation: google.maps.Animation.DROP,
      title: 'Nuestras Oficinas'
    });
  }

</script>

<nav class="navbar navbar-default navbar-fixed-top menu-ppal" role="navigation">
  <div class="container col-md-offset-1 col-xs-12 col-md-10">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-principal">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="navbar-brand">
        <%= link_to image_tag("logo-google.png"), static_pages_home_path, :class=>"mov-suave" %>
      </div>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="menu-principal">
      <ul class="nav navbar-nav">
        <% if @menu_home != "" %>
          <li>
            <%= link_to static_pages_home_path do %>
                <span class="glyphicon glyphicon-home"></span> <%= @menu_home %>
            <% end %>
          </li>
        <% end %>
        <% if @menu_quien != "" %>
          <li>
            <%= link_to static_pages_quien_path do %>
                <span class="glyphicon glyphicon-user"></span> <%= @menu_quien %>
            <% end %>
          </li>
          <% end %>
        <% if @menu_servicios != "" %>
          <li>
            <%= link_to static_pages_servicios_path do %>
                <span class="glyphicon glyphicon-check"></span> <%= @menu_servicios %>
            <% end %>
          </li>
        <% end %>
        <% if @menu_otramas != "" %>
          <li>
            <%= link_to static_pages_otramas_path do %>
                <span class="glyphicon glyphicon-check"></span> <%= @menu_otramas %>
            <% end %>
          </li>
        <% end %>
        
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon-envelope"></span> Contacto <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <% if @menu_ubicacion != "" %>
              <li>
                <%= link_to @menu_ubicacion, static_pages_ubicacion_path %>
              </li>
              <li class="divider"></li>
            <% end %>
            <li>
              <%= link_to 'Consultas', new_contact_path(:motivo => "menu - Contacto"), remote: true %>
            </li>
            <li>
              <%= link_to 'Te llamamos Gratis', new_contact_path(:motivo => "menu - telefono"), remote: true %>
            </li>

            <% if logged_in? %>
              <li class="divider"></li>
              <li>
                <%= link_to "Salir del Sistema", logout_path, method: "delete" %>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= yield %>

<div class="col-xs-12 pie-pagina">

  <p></p>
  <div class="col-xs-12 col-sm-offset-1 col-sm-5 col-md-offset-2 col-md-4">
    <% if @page_pie %>
      <h3><%== @page_pie.pag_titulo %></h3>
      <p><%== @page_pie.pag_desc %></p>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-offset-1 col-sm-6 col-md-5">
    <h3>Encuéntranos también en:</h3>
    <div class="logo-redes col-sm-offset-1 col-md-offset-2">
      <%= link_to image_tag("icon-f2.png"), "http://www.facebook.com", target: "_blank", :class=>"img-responsive img-ppal" %>
    </div>
    <div class="logo-redes">
      <%= link_to image_tag("icon-t2.png"), "http://www.twitter.com", target: "_blank", :class=>"img-responsive img-ppal" %>
    </div>
  <p><br/><br/><br/><br/><br/><br/></p>
  </div>

  <%= render partial: 'static_pages/carga_botones_pagina', locals: {pagina: @page_pie} %>

</div>

</body>
</html>
