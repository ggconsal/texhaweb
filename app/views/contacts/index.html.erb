<% if fpg_general %>
  <% @tag_title = "Reporte de Contactos | " + fpg_general.pag_titulo %>
<% end %>

<p id="notice"><%= notice %></p>

<div class="margen-izq-2 margen-sup-4 margen-inf-3">
  <h1>Reporte de Contactos</h1>


  <div class="row margen-izq-2 margen-der-1 margen-sup-2">
    <% if logged_in? && 
        (@current_contact.con_nya == "Admin" || 
         @current_contact.con_nya == "Superuser") %>
      <table class="table">
        <div class="col-sm-12">
          <thead>
            <tr>
              <th>NyA</th>
              <th>Nombre</th>
              <th>Apellido</th>
              <th>telefono</th>
              <th>Comentario</th>
              <th>Mail</th>
              <th>Empresa</th>
              <th>Subscr?</th>
              <th>Confirm?</th>
              <th colspan="2"></th>
            </tr>
          </thead>
        </div> 

        <div class="col-sm-12">
          <tbody>
            <% @contacts.each do |contact| %>
              <tr>
                <td><%= contact.con_nya %></td>
                <td><%= contact.con_nombre %></td>
                <td><%= contact.con_apellido %></td>
                <td><%= contact.con_telefono %></td>
                <td><%= contact.con_obs %></td>
                <td><%= contact.con_mail %></td>
                <td><%= contact.con_password %></td>
                <td><%= contact.con_subscribir %></td>
                <td><%= contact.con_confirmado %></td>
                <td><%= link_to 'Modif', edit_contact_path(contact, :tipo => "datos") %></td>
                <td><%= link_to 'Borrar', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </div> 
      </table>
    <% else %>
      <h4>
        Debe ser Administrador e ingresar al sistema para visualizar contactos.
      </h4>
    <% end %>
  </div> 
</div> 

<br/><br/><br/>
