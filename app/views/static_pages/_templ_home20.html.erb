<% if interr == 1 %>
          <!--  Solo la primera vez del '@posts.each' -->
          <% if @post_count == 1 %>
              <div id="myCarousel" class="carousel slide" data-ride="carousel"> <!-- data-ride="carousel" >  -->
                <ol class="carousel-indicators hidden-xs"> <!-- Indicators -->
                  <% for i in 1..@cant_posts %>
                    <% if i == 1 %>
                      <li data-target="#myCarousel" data-slide-to="<%= i-1 %>" class="active">
                    <% else %>
                      <li data-target="#myCarousel" data-slide-to="<%= i-1 %>">
                    <% end %>
                    </li>
                  <% end %>
                </ol>
                <div class="carousel-inner" role="listbox">
                  <div class="item active carousel-lg">

          <!-- Desde la segunda vez del '@posts.each' -->
          <% else %>
                  <div class="item carousel-lg">
          <% end %>

          <!-- Para todas las veces del '@posts.each' -->
                    <div class="col-xs-12 div-hori <%= @page.pag_estilo_headerh %>" >
                      <%= render partial: 'static_pages/mostrar_inagen_pagina', locals: {vanilla: "NO", img_url: post.imagen_big, img_name: post.imagen_big_file_name} %>
                    </div>
                    <div class="col-xs-12 div-vert <%= @page.pag_estilo_headerv %>" >
                      <%= render partial: 'static_pages/mostrar_inagen_pagina', locals: {vanilla: "NO", img_url: post.imagen_big, img_name: post.imagen_big_file_name} %>
                    </div>
                    <div class="carousel-lg-abajo"></div>
                    <div class="carousel-caption">
                      <h1>
                        <% if post.pos_simbolo != "" %>
                          <i class="glyphicon <%= post.pos_simbolo %>"> </i>
                        <% end %>
                        <%== post.pos_titulo %><span><%== post.pos_subtitulo %></span>
                      </h1>
                      <h2>
                        <%== post.pos_intro %>
                      </h2>
                      <div class="centered">
                        <%= link_to post.pos_boton_desc, new_contact_path(:motivo => "menu - Contacto"), remote: true, :class=>"btn-idx2 btn-font btn-lg" %>
                      </div>
                      <!-- ********  MUESTRO BOTONES PARA CONFIGURAR  *********  -->
                      <%= render partial: 'static_pages/carga_botones_item', locals: {post: post} %>
                    </div>
                  </div>
<% end %>

<% if interr == 2 %>
      <% if @page.pag_design == "home20" %>
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev"><!-- Left and right controls -->
              <span class="glyphicon glyphicon-hand-left" aria-hidden="true">
              </span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
              <span class="glyphicon glyphicon-hand-right" aria-hidden="true">
              </span>
              <span class="sr-only">Next</span>
            </a>
          </div>
          <!-- *************  MOSTRAR BOTONES PRINCIPALES SUPERUSER y ADMIN  ************* -->
          <%= render partial: 'static_pages/carga_botones_pagina' %>
      <% end %>
<% end %>
