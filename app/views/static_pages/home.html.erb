</div>

<% if logged_in? && @current_contact.con_nombre == "Superuser" %>
  <div class="righter">
    <p>
      <%= link_to new_page_path, remote: true, class: "btn btn-md btn-danger" do %>
          <span class="glyphicon glyphicon-plus-sign"></span> Crear PÃ¡gina
      <% end %>
      <% if @page %>
        <%= link_to edit_page_path(id: @page.id), remote: true, class: "btn btn-md btn-warning" do %>
            <span class="glyphicon glyphicon-retweet"></span> Cambiar Fotos
        <% end %>
      <% end %>
    </p>
  </div>
<% end %>

<% if logged_in? && @current_contact.con_nombre == "Admin" %>
  <div class="righter">
    <h4>
      <% if @pages.try(:any?) %>
        <%= link_to 'Cambiar Foto', edit_page_path(id: @page.id), remote: true, class: "glyphicon glyphicon-retweet btn btn-lg btn-info" %><br/>
      <% end %>
    </h4>
  </div>
<% end %>


