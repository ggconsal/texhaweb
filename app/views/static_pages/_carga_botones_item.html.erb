                      <!-- ********  MUESTRO BOTONES PARA CONFIGURAR  *********  -->
                      <% if logged_in? && 
                            (@current_contact.con_nya == "Admin" || 
                             @current_contact.con_nya == "Superuser") %>
                        <div class="centered botones-item">
                          <h5>
                          [ <%= link_to ' ', edit_post_path(post, pagina: @page.pag_tipo, pagina_post: @page.pag_nombre, estilo: @page.pag_design), remote: true, class: "glyphicon glyphicon-edit", title: 'Modificar Item', 'data-toggle' => 'tooltip', 'data-placement' => 'right' %> - 
                          <%= link_to ' ', posts_duplicar_path(id: post.id), method: :post, class: "glyphicon glyphicon-duplicate", title: 'Duplicar Item', 'data-toggle' => 'tooltip', 'data-placement' => 'right' %> - 
                          <%= link_to ' ', post_path(id: post.id), method: :delete, data: { confirm: '¿Está Seguro de Borrar el Ítem?' }, class: "glyphicon glyphicon-remove-sign", title: 'Borrar Item', 'data-toggle' => 'tooltip', 'data-placement' => 'right' %> ]
                          </h5>
                        </div>
                      <% end %>

