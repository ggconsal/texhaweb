    <!-- *************  MOSTRAR BOTONES PRINCIPALES SUPERUSER  ************* -->
    <% if logged_in? && @current_contact.con_nya == "Superuser" %>
      <div class="col-xs-12 righter">
        <p>
          <%= link_to new_page_path, remote: true, class: "btn btn-md btn-danger" do %>
              <span class="glyphicon glyphicon-plus-sign"></span> Crear Página
          <% end %>
        </p>
      </div>
    <% end %>

    <!-- *************  MOSTRAR BOTONES PRINCIPALES ADMIN  ************* -->
    <% if logged_in? && 
          (@current_contact.con_nya == "Admin" ||
           @current_contact.con_nya == "Superuser") %>
      <div class="col-xs-12 righter">
        <h4>
          <%= link_to new_page_path(config: true), remote: true, class: "btn btn-md btn-danger" do %>
              <span class="glyphicon glyphicon-plus-sign"></span> Crear Página Config
          <% end %>

          <% if pagina != nil && pagina != "" %>
            <%= link_to edit_page_path(id: pagina.id), remote: true, class: "btn btn-md btn-warning" do %>
                <span class="glyphicon glyphicon-retweet"> </span> Modificar Página
            <% end %>
            <%= link_to new_post_path(pagina: pagina.pag_tipo, pagina_post: pagina.pag_nombre, estilo: pagina.pag_design), remote: true, class: "btn btn-md btn-warning" do %>
                <span class="glyphicon glyphicon-plus-sign"></span> Agregar Ítem
            <% end %>
          <% elsif @page %>
            <%= link_to edit_page_path(id: @page.id), remote: true, class: "btn btn-md btn-warning" do %>
                <span class="glyphicon glyphicon-retweet"> </span> Modificar Página
            <% end %>
            <%= link_to new_post_path(pagina: @page.pag_tipo, pagina_post: @page.pag_nombre, estilo: @page.pag_design), remote: true, class: "btn btn-md btn-warning" do %>
                <span class="glyphicon glyphicon-plus-sign"></span> Agregar Ítem
            <% end %>
          <% end %>
        </h4>
      </div>
    <% end %>

