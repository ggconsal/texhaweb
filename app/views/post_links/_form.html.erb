<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@post_link) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>

        <div class="centered">
          <% if @post_link.id %>
            <h3>Modificar Link Externo:</h3>
          <% else %>
            <h3>Agregar un Link Externo</h3>
          <% end %>
          <h4>
            "<%= @post.pos_titulo %>" (Id: <%= @post_link.post_id %>)
          </h4>
        </div>
        
        <% if @post_link.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@post_link.errors.count, "error") %> prohibited this post_link from being saved:</h2>

            <ul>
            <% @post_link.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      </div>


      <div id="div-modal-body" class="modal-body">
        <div class="field hide">
          <%= f.text_field :post_id, value: @post_link.post_id %>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <div class="field">
              <%= f.text_field :pli_titulo, required: true, :placeholder => "Ingrese el título...", :class=>"form-control" %>
            </div>
          </div>
          <div class="righter">
            <div class="field col-xs-12 col-sm-6 ">
              <%= f.text_field :pli_url, :placeholder => "Ingrese la URL externa...", :class=>"form-control" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="field col-xs-12">
            <%= f.text_area :pli_desc, required: true, :placeholder => "Ingrese la Descripción...", rows: "6",:class=>"form-control" %>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <div id="divMeAnoto" class="col-xs-11 righter">
          <%= f.submit 'Guardar', :class=>"btn btn-md btn-info", :id=>"gc-aceptar" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

